#!/bin/bash
echo "Before assembling==================="

/usr/libexec/s2i/assemble
rc=$?

if [ $rc -eq 0 ]; then
    echo "After successful assembling"
    echo running .s2i/bin/bash =========================
    pwd
    ls
    echo explicitly:npm run ngbuild
    npm run ngbuild
    echo done ========================
    ls dist
else
    echo "After failed assembling=================="
fi

exit $rc